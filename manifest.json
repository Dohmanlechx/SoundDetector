{
    "manifest_version": 3,

    "name": "Sound Detector",
    "description": "Detects sounds from specified browser tabs and notifies you about it.",
    "version": "0.1.0",

    "permissions": [
        "notifications",
        "tabs",
        "background"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    }
}