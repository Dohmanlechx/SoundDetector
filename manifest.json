{
    "manifest_version": 3,

    "name": "Sound Detector",
    "description": "Detects sounds from specified browser tabs and notifies you about it.",
    "version": "0.1.0",

    "permissions": [
        "notifications",
        "tabs",
        "background",
        "storage"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}